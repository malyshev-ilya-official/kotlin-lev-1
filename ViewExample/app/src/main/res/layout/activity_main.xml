<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_main__tv1"

        app:layout_constraintLeft_toLeftOf="@id/activity_main__gl_left"
        app:layout_constraintRight_toRightOf="@id/activity_main__gl_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"

        android:text="Hello world, my dear world! hd s bdj ashwdf"
        android:maxLines="2"
        android:ellipsize="end"

        android:layout_width="wrap_content"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"

        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_gravity="start"
        android:background="@color/design_default_color_primary"
        />

    <TextView
        android:id="@+id/activity_main__tv2"

        app:layout_constraintLeft_toLeftOf="@id/activity_main__gl_left"
        app:layout_constraintRight_toRightOf="@id/activity_main__gl_right"
        app:layout_constraintTop_toBottomOf="@+id/activity_main__tv1"

        app:layout_constraintHorizontal_bias="0"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Привет"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_gravity="start"
        android:background="@color/design_default_color_primary"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_main__rv1"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/activity_main__tv2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_main__fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        app:srcCompat="@android:drawable/ic_input_add"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_main__gl_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_main__gl_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="100dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>