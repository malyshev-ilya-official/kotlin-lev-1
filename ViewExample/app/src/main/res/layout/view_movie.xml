<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/view_movie__iv1"

        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"

        android:scaleType="centerCrop"

        tools:background="@color/purple_200"
        />
    
    <TextView
        android:id="@+id/view_movie__tv_title"
        android:layout_width="wrap_content"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/view_movie__iv1"
        app:layout_constraintBottom_toTopOf="@id/view_movie__tv_description"
        app:layout_constraintStart_toEndOf="@id/view_movie__iv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginBottom="10dp"
        app:layout_constraintVertical_chainStyle="packed"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:text="Title Title Title Title Title Title Title Title Title Title Title Title Title"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/view_movie__tv_description"
        android:layout_width="wrap_content"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/view_movie__tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/view_movie__iv1"
        app:layout_constraintStart_toEndOf="@id/view_movie__iv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:text="Description Description Description Description Description Description"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>